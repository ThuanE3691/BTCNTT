// Đề : https://luyencode.net/problem/SUM3
// Chạy vòng lặp từ 1->n và tăng sum lên


#include <iostream>
#include <math.h>
#include <iomanip>
using namespace std;


int main() {
	long n;
	cin >> n;
	double sum = 0;
	for (int i = 1; i <= n; i++) {
		sum += (1.0 /  (i*(i + 1)));
	}
	cout << setprecision(5) << fixed << sum;
}
